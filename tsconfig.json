{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["es6", "dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "": ["node_modules/", "src/types/"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "types": ["src/types"]
}
